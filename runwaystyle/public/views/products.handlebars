<section>
  <h2>Productos</h2>
  <div class="product-list">
    {{#each products}}
      <div class="product-card">
        <h3>{{this.name}}</h3>
        <p>{{this.description}}</p>
        <p><strong>Precio:</strong> ${{this.price}}</p>
        <button class="add-to-cart" data-product-id="{{this._id}}">Agregar al carrito</button>
      </div>
    {{/each}}
  </div>
</section>
